
#include <iostream>
using namespace std;  
int main(){
  int size=100;
  int *sales=new int [size];
  for (int i=0;i<size;i++){
sales[i]=i+1;
}
cout<<"initial sales data:";
for(int i=0;i<size;i++){
    cout<<sales[i]<<" ";
}
cout<<endl;
int newsize=200;
int *newsales=new int [newsize];

for(int i=0;i<size;i++){
    newsales[i]=sales[i];
}
for(int i=size;i<newsize;i++){
    newsales[i]=i+1;
}
delete []sales;
sales=newsales;
cout<<"size of array is changed to "<<newsize<<" "<<"elments"<<endl;
cout<<"new sales data:"<<endl;
for(int i=0;i<200;i++){
    cout<<sales[i]<<" "<<endl;
}
    return 0;
    
}
